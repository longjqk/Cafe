@model QLCafe.Models.Drink

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Drink</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DrinkName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DrinkName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Des)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Des)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImgUrl)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.ImgUrl" alt="Ảnh đồ uống" width="100" height="100" style="object-fit:cover;" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
    </dl>
    @if (User.IsInRole("Customer"))
    {
        <form asp-controller="Carts" asp-action="AddToCart" method="post">
            <input type="hidden" name="drinkId" value="@Model.DrinkId" />
            <input type="number" name="quantity" value="1" min="1" class="form-control w-25 mb-2" />
            <button type="submit" class="btn btn-primary">Thêm vào giỏ hàng</button>
        </form>
    }
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
         @:<a asp-action="Edit" asp-route-id="@Model?.DrinkId">Edit</a> |
    }
   
    <a asp-action="Index">Back to List</a>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
