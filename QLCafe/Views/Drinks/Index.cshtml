@model IEnumerable<QLCafe.Models.Drink>

@{
    ViewData["Title"] = "Index";
}

<h1>Index Drink </h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Tìm theo tên đồ uống..." value="@Context.Request.Query["searchString"]" />
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </div>
</form>

    
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrinkName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Des)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrinkName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Des)
            </td>
            <td>
                    <img src="@item.ImgUrl" alt="Ảnh đồ uống" width="100" height="100" style="object-fit:cover;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.DrinkId">Details</a> |
                                        
                        <a asp-action="Edit" asp-route-id="@item.DrinkId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.DrinkId">Delete</a>
                    

            </td>
        </tr>
}
    </tbody>
</table>
