@model IEnumerable<QLCafe.Models.Order>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
}

<h1>Orders Customer</h1>

<p>
    <a asp-controller="Drinks" asp-action="Index" class="btn btn-success">Tạo đơn hàng mới</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Status)</th>
            <th>@Html.DisplayNameFor(model => model.First().OrderDate)</th>
            <th>Khách hàng</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Status)</td>
                    <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.User?.UserName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-info btn-sm">Xem</a>
                        @* Nếu customer thì chỉ xem, admin mới sửa/xóa *@
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="4" class="text-center">Chưa có đơn hàng nào.</td></tr>
        }
    </tbody>
</table>
