@model QLCafe.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details (Customer)</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <dt class="col-sm-2">
            Drinks & Toppings
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var detail in Model.OrderDetails)
                {
                    <li>
                        <strong>@detail.Drink.DrinkName</strong> - Số lượng: @detail.Quantity
                        @if (detail.OrderDetailToppings != null && detail.OrderDetailToppings.Any())
                        {
                            <ul>
                                @foreach (var topping in detail.OrderDetailToppings)
                                {
                                    <li>@topping.Topping.ToppingName</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div><em>Không có topping</em></div>
                        }
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
