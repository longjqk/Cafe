@model IEnumerable<QLCafe.Models.Review>

@{
    ViewData["Title"] = "Review List";
}

<h1>Review List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Rating</th>
            <th>Comment</th>
            <th>User</th>
            <th>Drink</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Rating</td>
                <td>@item.Comment</td>
                <td>@item.User.UserName</td>
                <td>@item.Drink.DrinkName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReviewId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ReviewId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ReviewId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
