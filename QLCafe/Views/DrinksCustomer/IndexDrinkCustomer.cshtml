<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrinkName)
            </th>
            <p>
                Sắp xếp:
                <a asp-action="IndexDrinkCustomer" asp-route-sortOrder="PriceAsc">Giá tăng dần</a> |
                <a asp-action="IndexDrinkCustomer" asp-route-sortOrder="PriceDesc">Giá giảm dần</a>
            </p>

            <th>
                @Html.DisplayNameFor(model => model.Des)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DrinkName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Des)
                </td>
                <td>
                    <img src="@item.ImgUrl" alt="Ảnh đồ uống" width="100" height="100" style="object-fit:cover;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DrinkId">Details</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
